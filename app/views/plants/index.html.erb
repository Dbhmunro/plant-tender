<h1>Browse Plants</h1>
<div id="search">
<%= form_tag plants_path, method: :get do %>
    Search Plants: <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil%>
<% end %>
<%= link_to "Clear Search", plants_path %>
</div>
<br>

<ul>
<% @plants.each do |plant| %>
    <li><%= link_to plant.name, plant_path(plant) %></li><%# conditional formatting to be added %>
<% end %>
</ul>
<%= form_with(model: user, local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :zipcode %>
    <%= f.number_field :zipcode %>
    <br>
    <% if user.uid.blank? %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
    <% end %>
    <%= f.submit %>
<% end %>